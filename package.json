{
  "name": "stream-hider",
  "displayName": "StreamHider",
  "description": "Hide sensitive parts of your code visually during live streams without modifying source files",
  "version": "1.0.0",
  "publisher": "NathanBonnell",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "streamHider.toggle",
        "title": "StreamHider: Toggle Stream Mode"
      }
    ],
    "grammars": [
      {
        "scopeName": "inject.stream-hider",
        "path": "./syntaxes/stream-hidden.tmLanguage.json",
        "injectTo": [
          "source.ts",
          "source.tsx",
          "source.js",
          "source.jsx",
          "source.python",
          "source.java",
          "source.cs",
          "source.c",
          "source.cpp",
          "source.go",
          "source.rust",
          "source.lua",
          "source.ruby",
          "source.php",
          "source.swift",
          "source.kotlin",
          "source.dart",
          "source.r",
          "source.shell",
          "source.powershell",
          "source.sql",
          "source.css",
          "source.css.scss",
          "source.json",
          "source.yaml",
          "source.toml",
          "source.dockerfile",
          "source.makefile",
          "source.haskell",
          "source.elixir",
          "source.scala",
          "source.clojure",
          "source.fsharp",
          "source.ocaml",
          "source.perl",
          "source.groovy",
          "text.html.basic",
          "text.html.php",
          "text.html.markdown",
          "text.xml"
        ]
      }
    ],
    "configuration": {
      "title": "StreamHider",
      "properties": {
        "streamHider.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable or disable StreamHider globally"
        },
        "streamHider.hiddenFilePatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Glob patterns of files whose content should be hidden"
        },
        "streamHider.hiddenFolders": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Folder glob patterns to hide in explorer and editor"
        },
        "streamHider.languageCommentPrefixes": {
          "type": "object",
          "default": {},
          "description": "Custom comment prefixes per language ID. Maps a VSCode language ID to an array of single-line comment prefixes. Example: { \"lua\": [\"--\"], \"python\": [\"#\"] }",
          "additionalProperties": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "biome check src",
    "format": "biome format --write src",
    "test": "mocha --require ts-node/register 'src/test/**/*.test.ts'"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.3",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.5",
    "@types/vscode": "^1.85.0",
    "@vscode/test-electron": "^2.3.8",
    "mocha": "^10.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}